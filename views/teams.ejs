<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Teams</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="./images/basketball.png" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
      integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="container">
      <nav class="navbar navbar-light bg-light justify-content-start">
        <a class="navbar-brand border p-2 bg-primary text-light" href="/"
          >Home</a
        >
        <a class="navbar-brand border p-2 bg-primary text-light" href="/games"
          >Games CRUD (Michael Chang)</a
        >
        <a
          class="navbar-brand border p-2 bg-primary text-light"
          href="/employees"
          >Players CRUD (Daniel Lisko)</a
        >
      </nav>
      <div class="row">
        <div class="col-3">
          <h1><%= team %></h1>
        </div>
      </div>

      <div class="row">
        <div class="col-md-9">
          <% players.forEach(function (f) { %>
          <div>
            <div class="card">
              <div class="card-body">
                <div class="d-flex justify-content-center">
                  <h4 class="card-title">
                    <%= f.firstName %> <%= f.lastName %>
                  </h4>
                </div>
                <div class="card-text">
                  <p class="card-text">
                    <strong>Height: </strong> <%= Math.floor(f.height / 12)%>'
                    <%= f.height % 12%>"
                  </p>
                  <p><strong>Weight:</strong> <%= f.weight %> lbs</p>
                  <p><strong>Jersey Number:</strong> <%= f. jerseyNum%></p>
                  <p><strong>Position:</strong> <%= f.positionDesc %></p>
                </div>

                <!-- To delete a Player -->
                <div class="row">
                  <div class="d-flex justify-content-end col-6">
                    <form action="/employees/deleteEmployee" method="POST">
                      <input
                        type="hidden"
                        name="employeeID"
                        value="<%= f.employeeID%>"
                      />
                      <input
                        type="hidden"
                        name="playerID"
                        value="<%= f.playerID%>"
                      />
                      <input type="hidden" name="team" value="<%= f.name%>" />
                      <button type="submit" class="btn btn-primary">
                        Delete
                      </button>
                    </form>
                  </div>

                  <!-- Edit Player -->
                  <div class="d-flex justify-content-start col-6">
                    <form action="/employees/edit" method="POST">
                      <input type="hidden" name="team" value="<%= team%>" />
                      <input
                        type="hidden"
                        name="employeeID"
                        value="<%= f.employeeID%>"
                      />
                      <input
                        type="hidden"
                        name="firstName"
                        value="<%= f.firstName %>"
                      />
                      <input
                        type="hidden"
                        name="lastName"
                        value="<%= f.lastName %>"
                      />
                      <input
                        type="hidden"
                        name="jerseyNum"
                        value="<%= f.jerseyNum %>"
                      />
                      <input
                        type="hidden"
                        name="weight"
                        value="<%= f.weight%>"
                      />
                      <button type="submit" class="btn btn-primary">
                        Edit Player
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% })%>
          <!-- Coaches -->
          <% coach.forEach(function (f) { %>
          <div>
            <div class="card">
              <div class="card-body">
                <div class="d-flex justify-content-center">
                  <h4 class="card-title">
                    <%= f.firstName %> <%= f.lastName %>
                  </h4>
                </div>
                <div class="card-text d-flex justify-content-center">
                  <h4>Coach</h4>
                </div>
                <!--Edit-->
                <!--                 <div class="row">
                  <div class="d-flex justify-content-end col-6">
                    <a href="/deleteEmployee" class="btn btn-primary"
                      >Delete Coach</a
                    >
                  </div>
                  <div class="d-flex justify-content-start col-6">
                    <a href="/editEmployee" class="btn btn-primary"
                      >Edit Coach</a
                    >
                  </div>
                </div> -->
              </div>
            </div>
          </div>
          <% })%>
        </div>

        <!-- Creating a Player -->
        <div class="col-md-3">
          <h5>Add a New Player to the <%= team %></h5>
          <form action="/employees/player/create" method="POST">
            <input type="hidden" name="team" value="<%=team%>" />
            <!-- Use this to get teamID-->
            <div>
              <label class="form-label"
                >First Name:
                <input
                  required="true"
                  name="firstName"
                  type="text"
                  class="form-control"
              /></label>
            </div>
            <div>
              <label class="form-label"
                >Last Name:
                <input
                  required="true"
                  name="lastName"
                  type="text"
                  class="form-control"
              /></label>
            </div>
            <div>
              <label class="form-label"
                >Date of Birth:
                <input
                  required="true"
                  name="birthDate"
                  type="text"
                  class="form-control"
                  value="10/28/2001"
              /></label>
            </div>
            <!-- This is for adding to the players table -->
            <div>
              <label class="form-label"
                >Weight (lbs):
                <input
                  required="true"
                  name="weight"
                  type="number"
                  class="form-control"
              /></label>
            </div>
            <div>
              <label class="form-label"
                >Height (inches):
                <input
                  required="true"
                  name="height"
                  type="number"
                  class="form-control"
              /></label>
            </div>
            <div>
              <label class="form-label"
                >Jersey Number:
                <input
                  required="true"
                  name="jerseyNum"
                  type="number"
                  class="form-control"
              /></label>
            </div>
            <div>
              <label class="form-label"
                >Choose One:
                <select name="positionID">
                  <option value="1">Guard</option>
                  <option value="2">Forward</option>
                  <option value="3">Center</option>
                </select></label
              >
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
