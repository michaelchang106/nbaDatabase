<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Players and Coaches</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="./images/basketball.png" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
      integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="container">
      <nav class="navbar navbar-light bg-light justify-content-start">
        <a class="navbar-brand border p-2 bg-primary text-light" href="/"
          >Home</a
        >
        <a class="navbar-brand border p-2 bg-primary text-light" href="/games"
          >Games CRUD (Michael Chang)</a
        >
        <a
          class="navbar-brand border p-2 bg-primary text-light"
          href="/employees"
          >Players CRUD (Daniel Lisko)</a
        >
      </nav>

      <form action="/employees/team>" method="POST">
        <div class="dropdown">
          <button
            class="btn btn-secondary dropdown-toggle"
            type="submit"
            id="dropdownMenuButton1"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Select a Team
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <% teams.forEach(function (f) { %>
            <a class="dropdown-item" href="employees/team/<%= f.name %>"
              ><%= f.abbreviation %> - <%= f.name %></a
            >
            <% })%>
          </ul>
        </div>
      </form>
    </div>

    <!-- Drop down to select a team -->
  </body>
</html>
